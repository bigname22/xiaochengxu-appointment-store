/* pages/storeDesign/storeDesign.wxss */
.view_parent {
  margin: 8px 32px 5vh 32px;
  border: 5px solid #000;
  height:90vh;
  position: relative;
  border-radius: 8px;
}


.view_bg {
  height: 120px;
  width: 100%;
  z-index: 1;
}

.view_bg_no {
  height: 120px;
  border: 1px solid #aaa;
  text-align: right
}

.iv_edit {
  width: 28px;
  height: 28px;
  margin: 4px;
  padding: 4px;
}

.iv_edit_bg {
}

.view_logo {
  position: relative;
  top: -39px;
  z-index: 2;
  height: 78px;
  line-height: 78px;
  text-align: center
}

.view_logo_no {
  height: 78px;
  line-height: 78px;
  text-align: center
}

.view_logo_circle {
  width: 78px;
  height: 78px;
  border-radius: 50%;
  border: 1px solid #aaa;
  background: white;
  display: inline-block;
  line-height: 78px;
  text-align: end;
}

.iv_edit_logo {

}

.view_store_name {
  width: 100%;
  height: 44px;
  line-height: 44px;
  text-align: center;
  margin-top: -39px;
}

.view_store_name_no {
  width: 100%;
  height: 44px;
  line-height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tv_store_name {
  color: #aaa;
}

.view_bottom {
  position: absolute;
  bottom: 48px;
  width: 100%;
  height: 68px;
  display: flex;
  align-items: center;
  justify-content: space-around;
  background-color: #FBA99D;
}


.view_goods_func_name {
  width: 100%;
  height: 44px;
  line-height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tv_func_name {
  color: white;
}

.input {
  width: 78px;
}


.view_bottom_border {
  position: absolute;
  bottom: 0px;
  width: 100%;
  height: 48px;
  display: flex;
  border-top: 5px solid #000;
  align-items: center;
  justify-content: center;  
}

.view_circle {
  width: 58px;
  height: 32px;
  background-color: #aaa;
  border-radius: 16px;
}

.funcs {
  width: 100%;
  height: 38px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.tv_func {
  color: blue;
  margin: 0px 5vh;
}